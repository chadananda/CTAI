---
export const prerender = false;
import Base from '../../layouts/Base.astro';
import AdminAnalytics from '../../components/admin/AdminAnalytics.svelte';
const user = Astro.locals.user;
if (!user) return Astro.redirect('/dashboard');
---
<Base title="Admin Analytics">
  <nav class="flex items-center gap-3 text-sm text-ink-500 mb-6">
    <a href="/admin" class="hover:text-ink-200">Admin</a>
    <span>/</span>
    <span class="text-ink-200">Analytics</span>
  </nav>
  <h1 class="text-3xl font-semibold text-ink-100 mb-2">Analytics</h1>
  <p class="text-ink-400 mb-8">Translation activity, revenue, visitors, and search performance.</p>
  <AdminAnalytics client:load />
</Base>
