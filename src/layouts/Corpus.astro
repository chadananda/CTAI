---
import Base from './Base.astro';

interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  ogType?: string;
  ogImage?: string;
  work?: string;
  workSlug?: string;
  paraIndex?: number;
}

const { title, description, canonicalUrl, ogType, ogImage, work, workSlug, paraIndex } = Astro.props;
---

<Base title={title} description={description} canonicalUrl={canonicalUrl} ogType={ogType} ogImage={ogImage}>
  <slot name="head" slot="head" />

  {work && (
    <nav aria-label="Breadcrumb" class="flex items-center gap-2 text-xs font-mono text-ink-500 mb-4">
      <a href="/models/" class="hover:text-ink-300 transition-colors">Models</a>
      <span class="text-ink-700" aria-hidden="true">/</span>
      <a href={`/models/${workSlug}/`} class="hover:text-ink-300 transition-colors">{work}</a>
      {paraIndex && (
        <>
          <span class="text-ink-700" aria-hidden="true">/</span>
          <span class="text-ink-300" aria-current="page">&sect;{paraIndex}</span>
        </>
      )}
    </nav>
  )}

  <slot />
</Base>
