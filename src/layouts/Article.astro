---
import Base from './Base.astro';

interface Props {
  title: string;
  date?: string;
  author?: string;
}

const { title, date, author } = Astro.props;
---

<Base title={title}>
  <article class="max-w-3xl mx-auto">
    <header class="mb-8">
      <h1 class="text-3xl font-semibold text-stone-800 mb-2">{title}</h1>
      {(date || author) && (
        <p class="text-sm text-stone-500">
          {author && <span>{author}</span>}
          {author && date && <span> Â· </span>}
          {date && <time>{date}</time>}
        </p>
      )}
    </header>
    <div class="prose prose-stone prose-lg max-w-none">
      <slot />
    </div>
  </article>
</Base>
