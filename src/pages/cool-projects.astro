---
import Base from '../layouts/Base.astro';
import { imgUrl } from '../lib/imgix.js';

const projects = [
  {
    name: 'Baha\u2019i Library Online',
    url: 'https://bahai-library.org',
    slug: 'bahai-library',
    desc: 'The granddaddy of online Baha\u2019i libraries. For decades, Baha\u2019i Library Online has been the go-to resource for primary source documents, translations, scholarly articles, and encyclopedic references. If you\u2019ve ever Googled an obscure Baha\u2019i topic, chances are this site had the answer. An incredible volunteer-driven achievement in digital preservation.',
  },
  {
    name: 'The Utterance Project',
    url: 'https://theutteranceproject.com',
    slug: 'utteranceproject',
    desc: 'A beautifully designed platform for exploring Baha\u2019i readings and deepening resources. The Utterance Project curates and presents sacred texts with a focus on accessibility and visual appeal, making the writings inviting and approachable for new readers and longtime students alike.',
  },
  {
    name: 'Uplifting Words',
    url: 'https://upliftingwords.org',
    slug: 'upliftingwords',
    desc: 'A devotional blog celebrating Baha\u2019i holy places and writings through beautiful photography and thoughtful reflections. Uplifting Words pairs sacred passages with stunning imagery of Baha\u2019i shrines, gardens, and historic sites — a visual meditation on the beauty of the Baha\u2019i Faith.',
  },
  {
    name: 'Afnan Library',
    url: 'https://afnanlibrary.org',
    slug: 'afnanlibrary',
    desc: 'A remarkable scholarly archive built on the personal collection of Hasan Balyuzi, one of the most distinguished Baha\u2019i historians. The Afnan Library digitizes and shares rare manuscripts, books, and papers focusing on Baha\u2019i studies, Persian literature, and Middle Eastern history — treasures that would otherwise be accessible only to a handful of researchers.',
  },
  {
    name: 'The Loom of Reality',
    url: 'https://blog.loomofreality.org',
    slug: 'loomofreality',
    desc: 'Steven Phelps\u2019 fascinating exploration of the intersections between science, philosophy, and spirituality. Through lecture series, interviews, and written reflections, Loom of Reality tackles the big questions — consciousness, evolution, the relationship between faith and reason — with intellectual rigor and a deep grounding in the Baha\u2019i writings. Includes a wonderful partial inventory of Baha\u2019i Tablets.',
  },
  {
    name: 'Baha\u2019i Blog',
    url: 'https://www.bahaiblog.net',
    slug: 'bahaiblog',
    desc: 'A vibrant community blog covering the arts, culture, and creative expression within the Baha\u2019i world. From artist interviews to book reviews, film discussions to poetry, Baha\u2019i Blog celebrates the intersection of faith and creativity with warmth and genuine enthusiasm. One of the most consistently engaging voices in the online Baha\u2019i community.',
  },
  {
    name: 'Baha\u2019i Teachings',
    url: 'https://bahaiteachings.org',
    slug: 'bahaiteachings',
    desc: 'A daily essay site publishing accessible, opinion-driven explorations of Baha\u2019i principles and their relevance to contemporary life. With a wide roster of contributors covering everything from social justice to personal spirituality, Baha\u2019i Teachings is one of the most prolific sources of fresh Baha\u2019i content on the web — a new article every single day.',
  },
];
---

<Base
  title="Other Cool Projects"
  description={"A curated collection of inspiring Baha\u2019i-related projects and resources on the web."}
>
  <div class="max-w-4xl mx-auto py-12">
    <h1 class="text-3xl font-display font-bold text-ink-200 mb-2">Other Cool Projects</h1>
    <p class="text-ink-500 text-sm mb-12">Inspiring work by talented people in the Baha&rsquo;i community and beyond.</p>

    <div class="space-y-10">
      {projects.map(project => (
        <article class="group flex gap-6 items-start">
          <a href={project.url} target="_blank" rel="noopener noreferrer" class="shrink-0">
            <div class="w-56 rounded-lg overflow-hidden border border-ink-700/50 group-hover:border-ink-600 transition-colors">
              <img
                src={imgUrl(`screenshots/${project.slug}.png`, { width: 480 })}
                alt={`Screenshot of ${project.name}`}
                width="224"
                height="140"
                class="w-full h-auto opacity-80 group-hover:opacity-100 transition-opacity"
                loading="lazy"
              />
            </div>
          </a>
          <div class="min-w-0">
            <h2 class="text-lg font-display font-bold text-ink-200 mb-0.5">
              <a href={project.url} target="_blank" rel="noopener noreferrer" class="hover:text-gold-400 transition-colors">
                {project.name}
              </a>
            </h2>
            <p class="text-ink-600 text-xs font-mono mb-1.5">{project.url.replace(/^https?:\/\//, '')}</p>
            <p class="text-ink-400 text-sm leading-relaxed">{project.desc}</p>
          </div>
        </article>
      ))}
    </div>
  </div>
</Base>
